<div class="container">
    <div class="row">
        <% if @mybook.errors.any? %>
  <%= @mybook.errors.count %>件のerrorエラーが発生しました
  <% @mybook.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <div class="form">
                <h1>Editing Book</h1>

<%= form_with model:@mybook , url:"/books/#{@mybook.id}",local:true do |f| %>
<div class="form-group">
<label for="book-title">Title</label>
<%= f.text_field :title %>
</div>
<div calss="form-group">
<label for="book-body">Body</label>
<%= f.text_area :body %>
</div>
<div class="form-group">
<%= f.submit "Update Book"%>
</div>
<%= link_to "Show", "/books/#{@mybook.id}" %>
<%= link_to "Back", "/books" %>
<% end %>
</div>
</div>

        </div>
    </div>
</div>